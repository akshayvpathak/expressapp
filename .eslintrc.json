{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["prettier", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "comma-dangle": 0,
    "prettier/prettier": "error"
  },
  "plugins": ["prettier"],
  "globals": {
    "absoluteRequire": true
  }
}
